<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.iu.memorylearnapp.controller.GameController">
    <Label fx:id="timeLabel" text="Time: 0s"/>
    <Label fx:id="movesLabel" text="Moves: 0"/>
    <Label fx:id="pairsLabel" text="Pairs: 0"/>
    <GridPane fx:id="gridPane" hgap="10" vgap="10"/>
    <Button text="Spiel beenden" onAction="#quitGame"/>
</VBox>
