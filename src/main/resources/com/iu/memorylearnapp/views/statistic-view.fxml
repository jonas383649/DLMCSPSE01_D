<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="com.iu.memorylearnapp.controller.StatisticController" spacing="10" alignment="CENTER">

    <Label text="Spielstatistiken" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Zeit:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label text="Anzahl der Z端ge:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label text="Beste Zeit:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label text="Beste Anzahl der Z端ge:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label text="Durchschnittliche Zeit:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label text="Durchschnittliche Anzahl der Z端ge:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>

        <Label fx:id="timeLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label fx:id="movesLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label fx:id="bestTimeLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label fx:id="bestMovesLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label fx:id="avgTimeLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label fx:id="avgMovesLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Erneut spielen" onAction="#replay"/>
        <Button text="Weiter zum Men端" onAction="#showMenu"/>
    </HBox>
</VBox>
