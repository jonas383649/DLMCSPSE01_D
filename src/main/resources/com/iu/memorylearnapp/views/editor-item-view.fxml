<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.iu.memorylearnapp.controller.EditorItemController">
    <HBox spacing="5">
        <HBox spacing="5" HBox.hgrow="ALWAYS">
            <TextField fx:id="firstTextField" promptText="Inhalt" HBox.hgrow="ALWAYS"/>
            <Button fx:id="firstImageButton" text="⧉">
                <tooltip>
                    <Tooltip text="Bild auswählen"/>
                </tooltip>
            </Button>
        </HBox>

        <HBox spacing="5" HBox.hgrow="ALWAYS">
            <TextField fx:id="secondTextField" promptText="Inhalt" HBox.hgrow="ALWAYS"/>
            <Button fx:id="secondImageButton" text="⧉">
                <tooltip>
                    <Tooltip text="Bild auswählen"/>
                </tooltip>
            </Button>
        </HBox>

        <HBox alignment="CENTER" prefWidth="35.0">
            <Button onAction="#deleteCardPair" text="✖">
                <tooltip>
                    <Tooltip text="Kartenpaar löschen"/>
                </tooltip>
            </Button>
        </HBox>
    </HBox>
</StackPane>
