<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iu.memorylearnapp.controller.EditorItemController">
    <VBox HBox.hgrow="ALWAYS">
        <TextField fx:id="firstTextField" promptText="Inhalt"/>
        <Button fx:id="firstImageButton" text="Bild auswählen"/>
    </VBox>
    <VBox HBox.hgrow="ALWAYS">
        <TextField fx:id="secondTextField" promptText="Inhalt"/>
        <Button fx:id="secondImageButton" text="Bild auswählen"/>
    </VBox>
    <VBox alignment="CENTER" prefWidth="35.0">
        <Button onAction="#deleteCardPair" text="✖"/>
    </VBox>
</HBox>
