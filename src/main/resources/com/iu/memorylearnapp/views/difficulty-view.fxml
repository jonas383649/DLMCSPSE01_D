<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.iu.memorylearnapp.controller.DifficultyController">
    <VBox styleClass="container" alignment="CENTER" spacing="10">
        <Label text="Schwierigkeitsgrad" styleClass="title"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button fx:id="easyButton" text="Leicht" onAction="#playEasy" minWidth="120"/>
        <Button fx:id="mediumButton" text="Mittel" onAction="#playMedium" minWidth="120"/>
        <Button fx:id="hardButton" text="Schwer" onAction="#playHard" minWidth="120"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button text="Abbrechen" onAction="#onCancel" minWidth="120"/>
    </VBox>
</StackPane>
